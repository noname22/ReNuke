{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug VGM Player",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/vgm-player/vgm-player",
            "args": ["~/tmp/sonic.vgm"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build VGM Player (Debug)",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Tone Generator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/tone-generator/tone-generator",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tone Generator (Debug)",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}